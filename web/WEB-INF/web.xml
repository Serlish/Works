<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Flight</servlet-name>
        <servlet-class>Servlets.ListFlight</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateFlight</servlet-name>
        <servlet-class>Servlets.UpdateFlight</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteFlight</servlet-name>
        <servlet-class>Servlets.DeleteFlight</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPassenger</servlet-name>
        <servlet-class>Servlets.AddPassenger</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePassenger</servlet-name>
        <servlet-class>Servlets.UpdatePassenger</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePassenger</servlet-name>
        <servlet-class>Servlets.DeletePassenger</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DateFlight</servlet-name>
        <servlet-class>Servlets.DateFlight</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KeyPassenger</servlet-name>
        <servlet-class>Servlets.KeyPassenger</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Flight</servlet-name>
        <url-pattern>/ListFlight</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Passenger</servlet-name>
        <servlet-class>Servlets.ListPassenger</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Passenger</servlet-name>
        <url-pattern>/ListPassenger</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddFlight</servlet-name>
        <servlet-class>Servlets.AddFlight</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFlight</servlet-name>
        <url-pattern>/AddFlight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateFlight</servlet-name>
        <url-pattern>/UpdateFlight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteFlight</servlet-name>
        <url-pattern>/DeleteFlight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPassenger</servlet-name>
        <url-pattern>/AddPassenger</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePassenger</servlet-name>
        <url-pattern>/UpdatePassenger</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePassenger</servlet-name>
        <url-pattern>/DeletePassenger</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DateFlight</servlet-name>
        <url-pattern>/DateFlight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KeyPassenger</servlet-name>
        <url-pattern>/KeyPassenger</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/myDatasource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
